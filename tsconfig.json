{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": false, // don't emit declarations
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "ES2020"],
    "locale": "ru",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "outDir": "./dist/",
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "ES5",
    "paths": {
      "root/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*"
  ]
}
